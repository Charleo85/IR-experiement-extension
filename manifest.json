{
  "manifest_version": 2,
  "name": "Amazon Shopping Assistant",
  "description": "We read amazon review for you",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "RCR Example",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "https://www.amazon.com/*"
  ],
  "content_scripts": [{
    "matches": ["https://www.amazon.com/*"],
    "css": [],
    "js": ["content.js"]
  }]
}
