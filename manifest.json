{
  "manifest_version": 2,
  "name": "Amazon Shopping Assistant",
  "description": "We read amazon review for you",
  "version": "0.1.9",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Popup action",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "https://www.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*"
      ],
      "css": [],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "icons/*.png"
  ]
}
